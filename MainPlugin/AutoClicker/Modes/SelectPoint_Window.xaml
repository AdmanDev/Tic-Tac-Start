<Window x:Class="MainPlugin.AutoClicker.Modes.SelectPoint_Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainPlugin.AutoClicker.Modes"
             mc:Ignorable="d" 
             ResizeMode="NoResize" ShowInTaskbar="False"  Topmost="True" WindowStyle="None" MouseMove="Window_MouseMove" Foreground="White" Opacity="0.2" AllowsTransparency="True" WindowState="Maximized">
    <Canvas x:Name="MyCanvas" MouseUp="MyCanvas_MouseUp">
        <Label x:Name="LB_Point" Content="point" Padding="10,5" FontSize="14" FontWeight="ExtraBold"/>
        <Label Content="Cliquez pour choisir un point" FontSize="14" FontWeight="ExtraBold"/>
    </Canvas>
</Window>
